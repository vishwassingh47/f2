<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:background="#fcaf53"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FTP SERVER"
            android:gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:id="@+id/row24_title"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/settings"
            android:focusable="false"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/row24_menu"
            />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:src="@mipmap/server"
        android:id="@+id/row24_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="192.167.33.44"
        android:singleLine="true"
        android:id="@+id/row24_host"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:text="username"
        android:singleLine="true"
        android:id="@+id/row24_userName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:text="*******"
        android:singleLine="true"
        android:id="@+id/row24_password"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:text="2121"
        android:singleLine="true"
        android:id="@+id/row24_port"
        />
</LinearLayout>