<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="60dp"
android:id="@+id/row9"
android:layout_weight="8"
android:background="@color/theme1_item_normal"
    >

<!--IMAGE-->
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/folder5"
        android:id="@+id/row9_icon1"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/video"
        android:id="@+id/row9_icon4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>

<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="7"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progress="79"
        android:progressDrawable="@drawable/pb_only_progress2"
        android:indeterminateOnly="false"
        android:scaleX="-1"
        android:id="@+id/row9_pb"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/dropbox"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/row9_icon2"
        android:visibility="visible"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/favourite"
        android:layout_toLeftOf="@+id/row9_icon2"
        android:layout_toStartOf="@+id/row9_icon2"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/row9_icon3"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/row9_icon3"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:maxLines="2"
        android:id="@+id/row9_name"
        android:text="sjajahashsihj "
        android:ellipsize="marquee"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12dp"
        android:text="567 GB"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/row9_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/row9_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12dp"
        android:text="45 %"
        android:layout_below="@+id/row9_name"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/row9_percent"
        android:textColor="@color/black"
        />




</RelativeLayout>


</LinearLayout>