<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/row12"
        android:background="#ffffff"
        android:padding="2dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/image"
            android:id="@+id/row12_icon1"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/favourite"
            android:layout_alignTop="@+id/row12_icon1"
            android:layout_alignEnd="@+id/row12_icon1"
            android:layout_alignRight="@+id/row12_icon1"
            android:id="@+id/row12_icon2"
            />

        <ImageView
            android:layout_margin="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sd_card"
            android:layout_alignTop="@+id/row12_icon1"
            android:layout_alignStart="@+id/row12_icon1"
            android:layout_alignLeft="@+id/row12_icon1"
            android:id="@+id/row12_icon3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:orientation="vertical"
            android:background="#000000"
            android:id="@+id/row12_linear_layout"
            >
            <!--folder name and items-->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/row12_name"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-3dp"
                android:singleLine="true"
                android:text="Folder Name jxhjbcxvb"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_height="25dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="56"
                android:textSize="14dp"
                android:id="@+id/row12_items"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />

        </LinearLayout>

            <!--folder path-->
            <TextView
            android:id="@+id/row12_shortpath"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="10dp"
            android:text="/sdcard/0/haha/dcim"
            android:ellipsize="start"
            android:textColor="#fcaf50"

            />


    </LinearLayout>


    </RelativeLayout>




