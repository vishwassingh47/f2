<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:background="#fcaf53"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DROPBOX"
            android:gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:id="@+id/row22_title"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/settings"
            android:focusable="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/row22_menu"
            />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:src="@mipmap/google_drive"
        android:id="@+id/row22_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="VISHWASSINGH910@gmail.com"
        android:singleLine="true"
        android:id="@+id/row22_userName"
        />

    <ProgressBar
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="79"
        android:background="@drawable/pb_only_background"
        android:progressDrawable="@drawable/pb_only_progress"
        android:indeterminateDrawable="@drawable/pb_only_progress"
        android:indeterminateOnly="false"
        android:id="@+id/row22_progress"
        />

    <!--FREE   TOTAL-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--FREE-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Free : "
                android:singleLine="true"
                />

            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="1.2GB"
                android:id="@+id/row22_free"
                android:singleLine="true"
                />

        </LinearLayout>

        <!--TOTAL-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Total :"
                android:singleLine="true"
                />

            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="2GB"
                android:id="@+id/row22_total"
                android:singleLine="true"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>