<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/art_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:visibility="gone"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/pick_nose"
        android:id="@+id/art_layout_icon"
    />

    <Button
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/art_layout_retry"
        android:layout_below="@+id/art_layout_text"
        android:layout_centerHorizontal="true"
        android:text="Retry"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/art_layout_icon"
        android:id="@+id/art_layout_text"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="here is a mesage"

    />

</RelativeLayout>
