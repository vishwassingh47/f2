<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#000000"
    >



    <!--top heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Analysing Space...."
        android:textStyle="bold"
        android:textColor="#ffffff"
        />


    <!--Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00b0ff"
        />


    <!--progress info.... -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRESS"
                android:textStyle="bold"
                android:textColor="#f44336"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/sdcard/***Android/skjdksj"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/analyser_dialog_pathname"
                />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/analyser_dialog_size"
                android:text="24kb / 76mb"
                />

        </LinearLayout>


    <!--Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00b0ff"
        />


    <!--progress bar.... -->
    <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="56 %"
                android:textColor="#f44336"
                android:textStyle="bold"
                android:id="@+id/analyser_dialog_percent"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="79"
                android:background="@drawable/pb_only_background"
                android:progressDrawable="@drawable/pb_only_progress"
                android:indeterminateOnly="false"
                android:id="@+id/analyser_dialog_progressbar"
                />

        </LinearLayout>




</LinearLayout>