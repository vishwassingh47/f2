<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/row13"
    android:background="#ffffff"
    android:padding="2dp"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/image"
        android:id="@+id/row13_icon1"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/favourite"
        android:layout_alignTop="@+id/row13_icon1"
        android:layout_alignEnd="@+id/row13_icon1"
        android:layout_alignRight="@+id/row13_icon1"
        android:id="@+id/row13_icon2"
        />

    <ImageView
        android:layout_margin="2dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sd_card"
        android:layout_alignTop="@+id/row13_icon1"
        android:layout_alignStart="@+id/row13_icon1"
        android:layout_alignLeft="@+id/row13_icon1"
        android:id="@+id/row13_icon3"
        android:visibility="visible"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:orientation="vertical"
        android:background="#000000"
        android:id="@+id/row13_linear_layout"
        >

        <!--file name-->
        <TextView
            android:id="@+id/row13_name"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="10dp"
            android:text="45352535525.jpeg"
            android:ellipsize="start"
            android:textColor="#fcaf50"
            />


    </LinearLayout>


</RelativeLayout>




