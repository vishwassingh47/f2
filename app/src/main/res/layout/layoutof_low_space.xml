<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#75757575"
    >


    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ERROR!!! LOW SPACE"
        android:textColor="#f44336"
        />

    <TextView
        android:id="@+id/lowspace_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Try Clearing 20MB More" />

    <!--border-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        >
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AVAILABLE SPACE: 400MB"
                android:maxLines="2"
                android:id="@+id/lowspace_available"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REQUIRED SPACE: 99MB"
                android:id="@+id/lowspace_required"
                android:maxLines="2"
                />


        </LinearLayout>

        <!--ERROR LOGO-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/error1"
                />
        </LinearLayout>

    </LinearLayout>


    <!--Border-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        >
    </LinearLayout>


   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ok"
       android:layout_gravity="center"
       android:id="@+id/lowspace_button"
       />

</LinearLayout>