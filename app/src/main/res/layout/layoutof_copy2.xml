<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <!--top heading -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/main_theme_red"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="OPERATION 47..."
            android:gravity="center"
            android:layout_margin="2dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/copy2_task_name"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@mipmap/copy"
            android:id="@+id/copy2_logo"
            />

    </LinearLayout>

    <!--Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        >

    </LinearLayout>


    <!--page 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/copy2_page1"
        android:orientation="vertical"
        >

        <!--PAGE 1 PART 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:id="@+id/PAGE1_INFO_1"
            >

            <!--LABELS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="NAME :"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="FROM :"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="TO :"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size :"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <!--Border -->
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000"
                >
            </LinearLayout>

            <!--VALUES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:id="@+id/copy2_name"
                    android:text="vishwas.txt"
                    />

                <!--file path and storage logo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/copy2_from_logo"
                        android:src="@mipmap/google_drive"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/copy2_from"
                        android:text="/sdcard/"

                        />
                </LinearLayout>

                <!--file path and storage logo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/copy2_to_logo"
                        android:src="@mipmap/google_drive"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:id="@+id/copy2_to"
                        android:text="/sdcard/"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:id="@+id/copy2_size"
                    android:text="242 GB"
                    />

            </LinearLayout>

        </LinearLayout>


        <!--Border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            >
        </LinearLayout>


        <!--progress info.... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRESS"
                android:textStyle="bold"
                android:textColor="@color/main_theme_red"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 / 76 items"
                android:id="@+id/copy2_itemsProgress"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copy2_sizeProgress"
                android:text="24kb / 76mb"
                android:textSize="14dp"

                />
        </LinearLayout>


        <!--progress bar.... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="56 %"
                android:textColor="@color/progress_blue"
                android:textStyle="bold"
                android:id="@+id/copy2_percent"
                android:textSize="14dp"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="79"
                android:background="@drawable/pb_only_background"
                android:progressDrawable="@drawable/pb_only_progress"
                android:indeterminateOnly="false"
                android:id="@+id/copy2_progressBar"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32kb/sec"
                android:gravity="center"
                android:id="@+id/copy2_speed"
                android:textSize="14dp"
                android:textColor="@color/progress_blue"
                />

        </LinearLayout>

        <!--ERROR DETAILS-->
        <TextView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copy2_errorDetails"
            android:textColor="@color/main_theme_red"
            android:textStyle="bold"
            android:visibility="visible"
            android:gravity="center"
            android:text="here is the error details"
            />

        <!--Buttons.... -->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/copy2_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textSize="14dp"
                android:textColor="@color/main_theme_red" />
            <Button
                android:id="@+id/copy2_open"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="OPEN"
                android:textSize="14dp"
                android:textColor="@color/progress_blue" />
            <Button
                android:id="@+id/copy2_skip"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="SKIP"
                android:textSize="14dp"
                android:textColor="@color/main_theme_red" />
            <Button
                android:layout_weight="1"
                android:id="@+id/copy2_pause_resume"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="PAUSE/RESUME"
                android:textSize="14dp"
                android:textColor="@color/progress_blue"
                />

        </LinearLayout>



    </LinearLayout>

    <!--page 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/copy2_page2"
        >
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="S.No"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>

        <ListView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/copy2_list"
            android:background="@color/theme1_grey"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:scrollbarSize="10dp"
            android:scrollbars="vertical"
            android:fastScrollEnabled="true"
            android:fastScrollAlwaysVisible="true"
            >
        </ListView>

    </LinearLayout>

    <!--COMMON Buttons.... -->
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/copy2_swipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DETAILS"
            android:textSize="14dp"
            android:textColor="@color/progress_blue" />
        <Button
            android:layout_weight="1"
            android:id="@+id/copy2_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HIDE"
            android:textSize="14dp"
            android:textColor="@color/progress_blue"
            />

    </LinearLayout>


    <!--Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        >

    </LinearLayout>

</LinearLayout>

